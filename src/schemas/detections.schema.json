{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DOVAH Detection Schema",
  "description": "Schema for security detections with explainability and evidence",
  "required": [
    "timestamp",
    "source",
    "host",
    "score",
    "model_version",
    "schema_ver"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the detection"
    },
    "source": {
      "type": "string",
      "description": "Detection source (log-lm, iforest, or fusion)"
    },
    "host": {
      "type": "string",
      "description": "Pseudonymized host identifier"
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Anomaly score between 0 and 1"
    },
    "model_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Model version in semver format"
    },
    "schema_ver": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version in semver format"
    },
    "session_id": {
      "type": "string",
      "description": "Optional pseudonymized session identifier"
    },
    "technique_id": {
      "type": "string",
      "pattern": "^T\\d{4}(\\.\\d{3})?$",
      "description": "Optional MITRE ATT&CK technique ID"
    },
    "xai_data": {
      "type": "object",
      "description": "Optional SHAP explanation data",
      "properties": {
        "feature_importance": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "explanation_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "intel": {
      "type": "object",
      "description": "Optional threat intelligence data",
      "properties": {
        "epss_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "kev_data": {
          "type": "object",
          "properties": {
            "known_exploitation": {
              "type": "boolean"
            },
            "vendor_assigned_date": {
              "type": "string",
              "format": "date"
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
