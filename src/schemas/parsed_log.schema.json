{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DOVAH Parsed Log Schema",
  "description": "Schema for parsed HDFS log events with required pseudonymization",
  "required": [
    "timestamp",
    "host",
    "component",
    "template_id",
    "session_id",
    "schema_ver"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "host": {
      "type": "string",
      "description": "Pseudonymized host identifier"
    },
    "component": {
      "type": "string",
      "description": "HDFS component generating the log"
    },
    "template_id": {
      "type": "string",
      "description": "Unique identifier for the log template"
    },
    "session_id": {
      "type": "string",
      "description": "Pseudonymized session identifier"
    },
    "schema_ver": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version in semver format"
    },
    "level": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARN", "ERROR", "CRITICAL"],
      "description": "Optional log level"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional array of labels for the log event"
    }
  },
  "additionalProperties": false
}
