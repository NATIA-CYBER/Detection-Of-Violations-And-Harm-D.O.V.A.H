# Database connection
DATABASE_URL=postgresql+psycopg://dovah:dovah@localhost:5432/dovah

# HMAC key for pseudonymization (dev only - change in production!)
DOVAH_HMAC_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
DOVAH_TENANT_SALT=dev_only_do_not_use

# Session configuration (5-min or daily)
DOVAH_SESSION_WINDOW=300  # 5 minutes in seconds

# Optional AWS pattern scrubbing (1=enabled, 0=disabled)
DOVAH_SCRUB_AWS=1

# Performance tuning
LATENCY_SLO_MS=2000  # Target p95 latency
