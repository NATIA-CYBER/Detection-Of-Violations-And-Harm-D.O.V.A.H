# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dovah
POSTGRES_USER=dovah_user
POSTGRES_PASSWORD=change_me_in_production

# AWS Configuration (Default Implementation)
AWS_REGION=eu-west-1  # or eu-central-1 for EU residency
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Kinesis Configuration
KINESIS_STREAM_NAME=dovah-events
KINESIS_SHARD_COUNT=1

# Flink Configuration
FLINK_PARALLELISM=1
FLINK_CHECKPOINTING_INTERVAL=60000

# Model Serving
MODEL_SERVING_TYPE=sagemaker  # or ecs, fargate, kserve
MODEL_ENDPOINT_NAME=dovah-inference

# Storage Configuration
S3_BUCKET_NAME=dovah-evidence
OBJECT_LOCK_MODE=GOVERNANCE
OBJECT_LOCK_RETENTION_DAYS=90

# Security Configuration
TENANT_SALT_KEY=change_me_in_production
HMAC_KEY=change_me_in_production

# Monitoring & SLOs
LATENCY_SLO_MS=2000  # P95 latency threshold in milliseconds
EXPLANATION_COVERAGE_THRESHOLD=0.95

# Feature Computation
WINDOW_SIZE_MINUTES=1
SESSION_TIMEOUT_MINUTES=30

# Alert Configuration
ALERT_BATCH_SIZE=100
ALERT_MAX_DELAY_MS=1000

# GenAI Configuration
GENAI_MODEL_NAME=gpt-4  # or alternative
GENAI_MAX_TOKENS=500
GENAI_TEMPERATURE=0.7

# Logging & Monitoring
LOG_LEVEL=INFO
ENABLE_TELEMETRY=true
METRIC_EXPORT_INTERVAL_SEC=60
